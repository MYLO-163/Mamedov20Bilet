<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context="MainActivity">

    <Button
        android:id="@+id/btnNext"
        android:layout_width="75dp"
        android:layout_height="66dp"
        android:backgroundTint="#F1F3F0"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconTint="#8BC34A" />

    <Button
        android:id="@+id/btnNotif"
        android:layout_width="75dp"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:backgroundTint="#F1F3F0"
        app:icon="@android:drawable/stat_notify_chat"
        app:iconTint="#8BC34A" />

    <Button
        android:id="@+id/btnScan"
        android:layout_width="348dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="302dp"
        android:backgroundTint="@color/green"
        android:text="Сканировать билеты"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="389dp"
        android:layout_height="287dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:src="@drawable/avia" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="299dp"
        android:layout_height="209dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="314dp"
        android:src="@drawable/cabinet" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="382dp"
        android:layout_height="95dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-99dp"
        android:layout_marginBottom="588dp"
        android:fontFamily="sans-serif-black"
        android:text="Личный кабинет"
        android:textColor="#4CAF50"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="252dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="494dp"
        android:src="@drawable/user" />

</RelativeLayout>